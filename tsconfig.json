{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [ "es2015", "es2016" ],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "typeRoots": ["./node_modules/@types"]
    },
    "include": [
        "main.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
